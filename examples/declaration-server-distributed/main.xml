<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

  <message name="list-of-workflow-instances">
    <parameter name="file" mimetype="application/xml" handler="http://riddl.org/ns/handlers/relaxng">
      <xi:include href="rngs/instances.rng"/>
    </parameter>
  </message>

  <message name="instance-info">
    <parameter name="info" mimetype="text/xml" handler="http://riddl.org/ns/handlers/relaxng">
      <xi:include href="rngs/instance-info.rng"/>
    </parameter>
  </message>

  <message name="xsl">
    <parameter name="xsl" mimetype="application/xml"/>
  </message>

  <resource>
    <get in="*" out="list-of-workflow-instances"/>
    <resource>
      <get in="*" out="instance-info"/>
      <delete in="*"/>
    </resource>
    <resource relative='xsls'>
      <resource>
        <get in="*" out="xsl"/>
      </resource>  
    </resource>
  </resource>  
</description>
