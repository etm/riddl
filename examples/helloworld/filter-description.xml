<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

  <message name="hello-list">
    <part type="text/xml" handler="http://riddl.org/ns/part-plugins/relaxng">
      <xi:include href="hello-list.rng"/>
    </part>
  </message>
  <message name="filter-hello-list">
    <part type="text/xml" handler="http://riddl.org/ns/part-plugins/relaxng">
      <xi:include href="filter-hello-list.rng"/>
    </part>
  </message>

  <resource>
    <get in="hello-list" out="filter-hello-list"/>
    <get in="*" out="*"/>
    <resource>
      <get in="*" out="*"/>
      <put in="*" out="*"/> <!-- if put would be removed, put would not occur in final description -->
    </resource>
  </resource>  

</description>
