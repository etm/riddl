<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

  <message name="hello">
    <part name="return" type="text/plain" handler="http://riddl.org/ns/part-plugins/plain-type">
      <plain type="string">
        <param name="pattern">hello .+</param>
      </plain>
    </part>
  </message>
  <message name="hello-form">
    <parameter name="hello-xy" type="string"/>
  </message>
  <message name="hello-list">
    <part name="hello-list" type="text/xml" handler="http://riddl.org/ns/part-plugins/relaxng">
      <xi:include href="hello-list.rng"/>
    </part>
  </message>
  <message name="hello-list-html">
    <part name="html" type="text/html" />
  </message>
  <message name="type-html">
  	<parameter name="type" type="string">
      <choice>
        <value>html</value>
      </choice>  
    </parameter>  
  </message>

  <resource>
    <post in="hello"/>
    <post in="hello-form"/>
    <get in="*" out="hello-list"/>
    <get in="type-html" out="hello-list-html"/> 
    <resource>
      <get in="*" out="hello"/>
      <put in="hello" out="hello"/>
      <delete in="*"/>
      <resource relative="hello">
        <post in="hello"/>
      </resource>
    </resource>
    <resource relative="hello">
      <post in="hello"/>
    </resource>
  </resource>  

</description>
