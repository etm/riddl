<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

  <message name="helloworld-input-get">
    <parameter name="email" type="string">
      <param name="pattern">[\w@.]+</param>
    </parameter>
    <!-- check in rng -->
    <parameter name="age" type="integer" fixedValue="42"/>
  </message>

  <message name="helloworld-input-get-plain">
    <parameter name="name" type="string"/>
  </message>

  <message name="helloworld-input-post">
    <parameter name="age" type="positiveInteger"/>
    <part type="application/x-www-form-urlencoded" check="http://riddl.org/ns/part-plugins/x-www-form-urlencoded">
      <parameter name="email" type="string">
        <param name="pattern">[\w@.]+</param>
      </parameter>
    </part>
  </message>

  <message name="helloworld-ouput-plain">
    <part type="text/plain" occurs="*"/>
  </message>

  <message name="helloworld-ouput">
    <part type="text/plain" occurs="?"/>
    <part type="text/xml" check="http://riddl.org/ns/part-plugins/relaxng">
      <xi:include href="helloworld.rng"/>
    </part>
  </message>  

  <resource relative="worlds">
    <post in="helloworld-input-post" out="helloworld-ouput"/>
    <get in="helloworld-input-get" out="helloworld-ouput"/>
    <get in="helloworld-input-get-plain" out="helloworld-ouput-plain"/>
    <resource recursive="false">
      <get in="*" out="helloworld-ouput"/>
    </resource>
  </resource>  

</description>
