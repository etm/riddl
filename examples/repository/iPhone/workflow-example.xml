<?xml version="1.0"?>
<workflow>

  <context>
    <variable name="Title"/>
    <variable name="Date"/>
    <variable name="Participants"/>
    <variable name="Departure"/>
    <variable name="FromWhere"/>
  </context>
                         

  <service id="1" anno="Film" uri="Cinemas/Arthous">
    <assignment input="title" from="ctx" name="Title"/>
    <assignment input="date" from="ctx" name="Date"/>
    <assignment input="numberOfSeats" from="ctx" name="Participants"/>
  </service>

  <service id="2" anno="Where to spend the night" uri="Lodging/Fancy/MrsCakes">
    <assignment input="arraivel" from="ctx" name="Date"/>
    <assignment input="departure" from="ctx" name="Departure"/>
    <assignment input="numberOfPersons" from="ctx" name="Participants"/>
  </service>
  
  <service id="3" anno="How to get there" uri="Transport/Carpets">
    <assignment input="from" from="ctx" name="FromWhere"/>
    <assignment input="to" from="white-information" id="1" name="address"/>
    <assignment input="numberOfSeats" from="ctx" name="Participants"/>
    <assignment input="departureTime" from="" name=""/>
  </service>
  
  <service id="4" anno="How to get back" uri="Transport/Brooms">
    <assignment input="from" from="ctx" name="FromWhere"/>
    <assignment input="to" from="white-information" id="1" name="address"/>
    <assignment input="numberOfSeats" from="ctx" name="Participants"/>
    <assignment input="departureTime" from="" name=""/>
  </service>
     
</workflow>
