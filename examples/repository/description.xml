<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

  <message name="list-of-groups">
    <parameter name="list-of-books" mimetype="text/xml" handler="http://riddl.org/ns/handlers/relaxng">
      <xi:include href="rngs/atom.rng"/>
    </parameter>
  </message>

  <message name="list-of-subgroups">
    <parameter name="list-of-books" mimetype="text/xml" handler="http://riddl.org/ns/handlers/relaxng">
      <xi:include href="rngs/atom.rng"/>
    </parameter>
  </message>

  <message name="list-of-services">
    <parameter name="list-of-books" mimetype="text/xml" handler="http://riddl.org/ns/handlers/relaxng">
      <xi:include href="rngs/atom.rng"/>
    </parameter>
  </message>

  <message name="description-of-service">
    <parameter name="list-of-books" mimetype="text/xml" handler="http://riddl.org/ns/handlers/relaxng">
      <xi:include href="rngs/atom.rng"/>
    </parameter>
  </message>

  <resource>
    <resource relative="groups">
      <request type="get" in="*" out="list-of-groups"/>
      <resource> <!-- Dynamically: name of the group -->
        <get in="*" out="list-of-subgroups"/>
        <resource> <!-- Dynamically: name of the subgroup -->
          <get in="*" out="list-of-services"/>
          <resource> <!-- Dynamicall: name of the service -->
            <get in="*" out="description-of-service"/>
          </resource>
        </resource>
      </resource>
    </resource>
    <resource relative="user">
    </resource>
  </resource>  

</description>
