<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
  <message name="xml">
    <parameter name="return" mimetype="application/xml"/>
  </message>

  <message name="request">
    <header name="Authorization" type="string"/>
  </message>  
  <message name="request_response">
    <parameter name="return" mimetype="*" handler="http://riddl.org/ns/handlers/oauth_request_token"/>
  </message>  
  <message name="access">
    <header name="Authorization" type="string"/>
  </message>  
  <message name="access_response">
    <parameter name="return" mimetype="*"/>
  </message>  
  <message name="authorize">
    <header name="Authorization" type="string"/>
  </message>  

  <resource>
    <resource relative="oauth">
      <resource relative="example">
        <resource relative="request_token.php" role="http://oauth.net/1.0/request_token">
          <post in="request" out="request_response"/>
        </resource>
        <resource relative="access_token.php" role="http://oauth.net/1.0/access_token">
          <post in="access" out="access_response"/>
        </resource>
        <resource relative="authorize.php" role="http://oauth.net/1.0/authorize">
          <post in="authorize" out="authorize_response"/>
        </resource>
      </resource>
    </resource>
  </resource>
</description>
