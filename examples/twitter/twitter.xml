<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

  <message name="update">
    <header name="Authorization" type="string"/>
    <parameter name="status" type="string"/>
    <optional>
      <parameter name="in_reply_to_status_id" type="string"/>
    </optional>
    <optional>
      <parameter name="lat" type="float">
        <param name="minInclusive">-90.0</param>
        <param name="maxInclusive">+90.0</param>
      </parameter>
    </optional>
    <optional>
      <parameter name="long" type="float">
        <param name="minInclusive">-180.0</param>
        <param name="maxInclusive">+180.0</param>
      </parameter>
    </optional>
  </message>

  <message name="xml">
    <parameter name="return" mimetype="application/xml"/>
  </message>

  <message name="request">
    <header name="Authorization" type="string"/>
  </message>  
  <message name="request_response">
    <parameter name="return" mimetype="*" handler="http://riddl.org/ns/handlers/oauth_request_token"/>
  </message>  
  <message name="access">
    <header name="Authorization" type="string"/>
  </message>  
  <message name="access_response">
    <parameter name="return" mimetype="*"/>
  </message>  
  <message name="authorize">
    <header name="Authorization" type="string"/>
  </message>  

  <resource>
    <resource relative="oauth">
      <resource relative="request_token" role="http://oauth.net/1.0/request_token">
        <post in="request" out="request_response"/>
      </resource>
      <resource relative="access_token" role="http://oauth.net/1.0/access_token">
        <post in="access" out="access_response"/>
      </resource>
      <resource relative="authorize" role="http://oauth.net/1.0/authorize">
        <post in="authorize" out="xml"/>
      </resource>
    </resource>

    <resource relative="statuses">
      <resource relative="show">
        <resource relative="\d+\.xml">
          <get in="*" out="xml"/>
        </resource>
      </resource>
      <resource relative="update.xml">
        <post in="update" out="xml"/>
      </resource>
    </resource>
  </resource>

</description>
