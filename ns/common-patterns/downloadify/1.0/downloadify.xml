<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
  
  <message name="dfout">
    <header name="content-type" type="string"/>
    <header name="content-disposition" type="string"/>
    <parameter name="content" mimetype="application/octet-stream"/>
  </message>
  <message name="dfin">
    <parameter name="mimetype" type="string"/>
    <optional>
      <parameter name="filename" type="string"/>
    </optional>
    <parameter name="content" mimetype="application/octet-stream"/>
  </message>

  <resource pattern="http://riddl.org/ns/common-patterns/downloadify/1.0">
    <get in="dfin" out="dfout"/>
  </resource>  

</description>
